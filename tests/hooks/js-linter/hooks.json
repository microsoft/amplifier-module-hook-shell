{
  "name": "js-linter",
  "description": "Run ESLint on JavaScript/TypeScript files and inject feedback",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${AMPLIFIER_HOOKS_DIR}/js-linter/lint.sh",
            "timeout": 45
          }
        ]
      }
    ]
  }
}
