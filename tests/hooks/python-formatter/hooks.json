{
  "name": "python-formatter",
  "description": "Auto-format Python files after editing using ruff",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${AMPLIFIER_HOOKS_DIR}/python-formatter/format.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
