{
  "name": "js-formatter",
  "description": "Auto-format JavaScript/TypeScript files after editing using prettier",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${AMPLIFIER_HOOKS_DIR}/js-formatter/format.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
