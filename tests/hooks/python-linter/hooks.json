{
  "name": "python-linter",
  "description": "Run ruff linter on Python files and inject feedback into agent context",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${AMPLIFIER_HOOKS_DIR}/python-linter/lint.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
