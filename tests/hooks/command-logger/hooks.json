{
  "name": "command-logger",
  "description": "Log all bash commands to a file for audit purposes",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${AMPLIFIER_HOOKS_DIR}/command-logger/log.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${AMPLIFIER_HOOKS_DIR}/command-logger/log-result.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
